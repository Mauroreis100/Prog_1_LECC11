package Exercicio_2;

import java.util.*;

public class Numeros {

	private double menor;
	private double maior;
	
	//Construtor
	public Numeros() {
		this.menor=0;
		this.maior=0;
	}
	
	//Metodos
	public void getMenorMaior(Vector vetor) {
		this.maior= (double)vetor.get(0);
		this.maior= (double)vetor.get(0);
		for(int i=0;i<vetor.size();i++) {
			if((double)vetor.get(i)>this.maior) {
				this.maior=(double)vetor.get(i);
			}else {
				this.menor=(double)vetor.get(i);
			}
		}
		System.out.println("O maior número é: "+this.maior);
		System.out.println("O menor número é: "+this.menor);
	}
}
