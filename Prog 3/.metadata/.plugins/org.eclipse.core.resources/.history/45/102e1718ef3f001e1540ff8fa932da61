package funcionario;

public class Professor extends Funcionario {
	int salario;

	public void setSalario(int salario) {
		if (salario > 0) {
			this.salario = salario;
		} else {
			throw new ValorSalarioNegativoException("O VALOR DO SAL√ÅRIO DEVE SER"
					+ "MAIOR QUE 0\n "salario+" INVALIDO");
		}

	}
}
