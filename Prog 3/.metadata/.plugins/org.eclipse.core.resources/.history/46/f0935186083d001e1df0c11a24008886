package mainThrow;

public class Atirando {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	
			System.out.println(pagarPropina(200));
	}
	private double valorAPagar=300;
	public void pagarPropina(double valor)
	{
		if(valor < 0)
		{
			throw new IllegalArgumentException("O valor deve ser maior que0, voce passou o valor: "+ valor);
		} else
		{
			valorAPagar = valorAPagar + valor;
		}
	}

}
